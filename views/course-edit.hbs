<h1>Editing {{course.title}} course</h1>

<form action="/courses/edit" method="POST" class="course-form">
	<div class="input-field">
		<input
			id="title"
			type="text"
			name="title"
			class="validate"
			required
			value="{{course.title}}"
		/>
		<label for="title">Course name</label>
		<span class="helper-text" data-error="Enter a name"></span>
	</div>

	<div class="input-field">
		<input
			id="price"
			type="number"
			name="price"
			class="validate"
			required
			min="1"
			value="{{course.price}}"
		/>
		<label for="price">Course price</label>
		<span class="helper-text" data-error="Enter a price"></span>
	</div>

	<div class="input-field">
		<input
			id="img"
			type="text"
			name="img"
			class="validate"
			required
			value="{{course.img}}"
		/>
		<label for="img">URL for an image</label>
		<span class="helper-text" data-error="Add URL for img"></span>
	</div>

	<input type="hidden" name="id" value="{{course.id}}" />
	<input type="hidden" name="_csrf" value="{{csrf}}" />

	<button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
	<input type="hidden" name="id" value="{{course.id}}" />
	<input type="hidden" name="_csrf" value="{{csrf}}" />
	<button class="btn red">Delete course</button>
</form>